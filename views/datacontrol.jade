extend ../layout


block content
	.row
		h2.text-center.title-color(class='headerTitle')
	
	.row
		form.form-horizontal(role='form')
			.row.form-group
				.col-md-7.col-md-offset-2
					input.form-control(id='search', name='input', value='#{input}', type ='text', placeholder='Keyword')
				.col-md-1
					button.btn-info.btn-sm(type='submit') Search
	.row
		.bs-callout.bs-callout-danger
			// - var results 	= (categoryData && categoryData.length)?categoryData.length:0
			// - var offset 	= 20*params.page
			//- span Show 
			//- span  #{results}
			//- span  result(s) from 
			//- span  #{offset}
			//- span  to #{offset + results}
			//- span  of total #{categoryCount} 
			//- span  row(s)
	.row
		form.form-horizontal(role='form')
			.col-md-2
				button.btn-info.btn-sm(class='add_row') Add Row

	.row
		table.table.table-hover.table-striped.table-bordered.text-justify 	
			tr.info
				th.text-center Id 
				th.text-center Keyword
				th.text-center Domain
				//- th.text-center Name
				th.text-center Action
			if data
				- each source in data
					tr(class='table_data', data-source=source)
						td #{source.id}
						td #{source.keyword}
						td #{source.domain_name}
						td

	.row
		ul.pager
			- var nPage 		= Math.ceil(total_pags/20)
			- var currentPage 	= locals.query.page

			- locals.query.page = currentPage - 1
			if (currentPage - 1) < 0
				li.disabled
					a Previous 
			else
				li 
					//- a(href='?#{qs.stringify(locals.query)}') Previous 
			
			- locals.query.page = currentPage + 1
			if (currentPage + 1) >= nPage	
				li.disabled
					a Next 
			else
				li 
					//- a(href='?#{qs.stringify(locals.query)}') Next


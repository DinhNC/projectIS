extend ../layout


block content
	.row
		h2.text-center #{headerTitle}
	.row
		.col-md-6.col-sm-6
			h4.text-center(style='color:#5bc0de') Input
			.row
				.col-sm-2.col-md-2
					label.label-padding-test-sentiment Keyword
				.col-sm-10.col-md-10
					input.input-test-sentiment(class='txt_keywords form-control', required='required', type='text', name='keywords', id='keywords', value="#{ikeywords || ''}")
			.row
				.col-sm-2.col-md-2
					label.label-padding-test-sentiment Domain
				.col-sm-10.col-md-10
					select.select-test-sentiment(class='sentiment-domainv  form-control', name='domain', id='domain')
			.row
				.col-sm-2.col-md-2
					label.label-padding-test-sentiment Title
				.col-sm-10.col-md-10
					textarea.input-unsize-test-sentiment(class='txt_title form-control', type='text', name='title', id='title') #{ititle}
			.row
				.col-sm-2.col-md-2
					label.label-padding-test-sentiment Contents
				.col-sm-10.col-md-10
					textarea.textarea-test-sentiment(class='txt_content form-control', type='text', name='content', id='content', required) #{icontents}
			.row
				.col-sm-12.col-md-12.text-right
					button(class='btn_reset_db btn btn-danger btn-sm', type='submit', name='Submit') Reset DB
					span &nbsp;
					button(class='btn_analyse btn btn-info btn-sm', type='submit', name='Submit', analyze='Analyze') Analyze
					span &nbsp;
					button(class='btnreset btn btn-default btn-sm', type='reset') Reset
			br
		.col-sm-6.col-md-6
			h4.text-center(style='color:#5bc0de') Analysis Result
			form(class='result-sentiment')
				.row
					.col-sm-4.col-md-4
						label Attribute rating
					.col-sm-8.col-md-8
						p(class='results_attribute')
			.row
				.col-sm-12.col-md-12
					p
			.row
				.col-sm-12.col-md-12
					label.text-center Detected sentiment phrases/terms
			.row
				.col-sm-12.col-md-12
					table(class="table table-bordered table-hover", id="table-results")
						thead
							tr(class='info')
								th(class='text-center') Attribute 
								th(class='text-center') Phrases
								th(class='text-center') Score
						tbody
			.row
				.col-sm-12.col-md-12
					p(class='score-results')
			.row
				.col-sm-12.col-md-12
					label Processing Flow
			.row
				.col-sm-12.col-md-12
					pre(class='text-results')

